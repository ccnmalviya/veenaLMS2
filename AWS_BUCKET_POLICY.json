{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowPublicReadAccess",
      "Effect": "Allow",
      "Principal": "*",
      "Action": "s3:GetObject",
      "Resource": [
        "arn:aws:s3:::veenaclasses/products/*",
        "arn:aws:s3:::veenaclasses/categories/*",
        "arn:aws:s3:::veenaclasses/brands/*",
        "arn:aws:s3:::veenaclasses/hero-banners/*",
        "arn:aws:s3:::veenaclasses/courses/thumbnails/*",
        "arn:aws:s3:::veenaclasses/courses/lessons/*"
      ]
    },
    {
      "Sid": "AllowIAMUserUpload",
      "Effect": "Allow",
      "Principal": {
        "AWS": "arn:aws:iam::YOUR_ACCOUNT_ID:user/YOUR_IAM_USERNAME"
      },
      "Action": [
        "s3:PutObject",
        "s3:GetObject",
        "s3:DeleteObject"
      ],
      "Resource": [
        "arn:aws:s3:::veenaclasses/products/*",
        "arn:aws:s3:::veenaclasses/categories/*",
        "arn:aws:s3:::veenaclasses/brands/*",
        "arn:aws:s3:::veenaclasses/hero-banners/*",
        "arn:aws:s3:::veenaclasses/courses/thumbnails/*",
        "arn:aws:s3:::veenaclasses/courses/lessons/*"
      ]
    },
    {
      "Sid": "AllowIAMUserListBucket",
      "Effect": "Allow",
      "Principal": {
        "AWS": "arn:aws:iam::YOUR_ACCOUNT_ID:user/YOUR_IAM_USERNAME"
      },
      "Action": "s3:ListBucket",
      "Resource": "arn:aws:s3:::veenaclasses",
      "Condition": {
        "StringLike": {
          "s3:prefix": [
            "products/*",
            "categories/*",
            "brands/*",
            "hero-banners/*",
            "courses/thumbnails/*",
            "courses/lessons/*"
          ]
        }
      }
    }
  ]
}
